<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Oleae" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="toolbarBackground">
        <item name="android:background">@color/app_theme</item>
    </style>
    <style name="toolbarText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="fragmentsBackground">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="normal_text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="logging_background">
        <item name="android:background">@color/app_theme</item>
    </style>
    <style name="logging_tittle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="logging_option">
        <item name="android:textColor">@color/app_theme</item>
    </style>
    <style name="logging_text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="logging_button">
        <item name="android:backgroundTint">@color/app_theme</item>
        <item name="android:textColor">@color/white</item>
    </style>




    //login
    <style name="custom_card_view_style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_card_view</item>
    </style>

    <style name="custom_card_view" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    //first page
    <style name="intro" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/intro_card</item>
    </style>

    <style name="intro_card" parent="">
        <item name="backgroundColor">@color/white</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


</resources>